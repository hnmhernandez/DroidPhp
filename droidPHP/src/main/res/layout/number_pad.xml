<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/txtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="@string/enter_your_password_for_exit"
            android:textColor="@color/text_disable_hint"
            android:textSize="@dimen/text_subheading_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.andexert.library.RippleView
                    android:id="@+id/btn1"
                    style="@style/RippleCustom">

                    <LinearLayout
                        android:layout_width="@dimen/number_pad_num_size"
                        android:layout_height="@dimen/number_pad_num_size"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textColor="@color/text"
                            android:textSize="35sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/about_subtitle_text_color"
                            android:textSize="@dimen/numpad_char_size" />
                    </LinearLayout>

                </com.andexert.library.RippleView>

                <com.andexert.library.RippleView
                    android:id="@+id/btn2"
                    style="@style/RippleCustom">

                    <LinearLayout
                        android:layout_width="@dimen/number_pad_num_size"
                        android:layout_height="@dimen/number_pad_num_size"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textColor="@color/text"
                            android:textSize="35sp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ABC"
                            android:textColor="@color/about_subtitle_text_color"
                            android:textSize="@dimen/numpad_char_size" />
                    </LinearLayout>
                </com.andexert.library.RippleView>

                <com.andexert.library.RippleView
                    android:id="@+id/btn3"
                    style="@style/RippleCustom">

                    <LinearLayout
                        android:layout_width="@dimen/number_pad_num_size"
                        android:layout_height="@dimen/number_pad_num_size"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:textColor="@color/text"
                            android:textSize="35sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DEF"
                            android:textColor="@color/about_subtitle_text_color"
                            android:textSize="@dimen/numpad_char_size" />
                    </LinearLayout>
                </com.andexert.library.RippleView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.andexert.library.RippleView
                    android:id="@+id/btn4"
                    style="@style/RippleCustom">

                    <LinearLayout
                        android:layout_width="@dimen/number_pad_num_size"
                        android:layout_height="@dimen/number_pad_num_size"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:textColor="@color/text"
                            android:textSize="35sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GHI"
                            android:textColor="@color/about_subtitle_text_color"
                            android:textSize="@dimen/numpad_char_size" />
                    </LinearLayout>
                </com.andexert.library.RippleView>

                <com.andexert.library.RippleView
                    android:id="@+id/btn5"
                    style="@style/RippleCustom">

                    <LinearLayout
                        android:layout_width="@dimen/number_pad_num_size"
                        android:layout_height="@dimen/number_pad_num_size"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:textColor="@color/text"
                            android:textSize="35sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="JKL"
                            android:textColor="@color/about_subtitle_text_color"
                            android:textSize="@dimen/numpad_char_size" />
                    </LinearLayout>
                </com.andexert.library.RippleView>

                <com.andexert.library.RippleView
                    android:id="@+id/btn6"
                    style="@style/RippleCustom">

                    <LinearLayout
                        android:layout_width="@dimen/number_pad_num_size"
                        android:layout_height="@dimen/number_pad_num_size"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6"
                            android:textColor="@color/text"
                            android:textSize="35sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MNO"
                            android:textColor="@color/about_subtitle_text_color"
                            android:textSize="@dimen/numpad_char_size" />
                    </LinearLayout>
                </com.andexert.library.RippleView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.andexert.library.RippleView
                    android:id="@+id/btn7"
                    style="@style/RippleCustom">

                    <LinearLayout
                        android:layout_width="@dimen/number_pad_num_size"
                        android:layout_height="@dimen/number_pad_num_size"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7"
                            android:textColor="@color/text"
                            android:textSize="35sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PQRS"
                            android:textColor="@color/about_subtitle_text_color"
                            android:textSize="@dimen/numpad_char_size" />
                    </LinearLayout>
                </com.andexert.library.RippleView>

                <com.andexert.library.RippleView
                    android:id="@+id/btn8"
                    style="@style/RippleCustom">

                    <LinearLayout
                        android:layout_width="@dimen/number_pad_num_size"
                        android:layout_height="@dimen/number_pad_num_size"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8"
                            android:textColor="@color/text"
                            android:textSize="35sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TUV"
                            android:textColor="@color/about_subtitle_text_color"
                            android:textSize="@dimen/numpad_char_size" />
                    </LinearLayout>
                </com.andexert.library.RippleView>

                <com.andexert.library.RippleView
                    android:id="@+id/btn9"
                    style="@style/RippleCustom">

                    <LinearLayout
                        android:layout_width="@dimen/number_pad_num_size"
                        android:layout_height="@dimen/number_pad_num_size"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9"
                            android:textColor="@color/text"
                            android:textSize="35sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="WXYZ"
                            android:textColor="@color/about_subtitle_text_color"
                            android:textSize="@dimen/numpad_char_size" />
                    </LinearLayout>
                </com.andexert.library.RippleView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/number_pad_num_size"
                    android:layout_height="@dimen/number_pad_num_size"
                    android:background="@drawable/circler"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7"
                        android:textSize="35sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PQRS"
                        android:textColor="@color/about_subtitle_text_color"
                        android:textSize="@dimen/numpad_char_size" />
                </LinearLayout>

                <com.andexert.library.RippleView
                    android:id="@+id/btn0"
                    style="@style/RippleCustom">

                    <LinearLayout
                        android:layout_width="@dimen/number_pad_num_size"
                        android:layout_height="@dimen/number_pad_num_size"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/text"
                            android:textSize="35sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/about_subtitle_text_color"
                            android:textSize="@dimen/numpad_char_size" />
                    </LinearLayout>
                </com.andexert.library.RippleView>

                <LinearLayout
                    android:layout_width="@dimen/number_pad_num_size"
                    android:layout_height="@dimen/number_pad_num_size"
                    android:background="@drawable/circler"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9"
                        android:textSize="35sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WXYZ"
                        android:textColor="@color/about_subtitle_text_color"
                        android:textSize="@dimen/numpad_char_size" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>